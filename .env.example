# Environment configuration template
# Copy this file to .env and fill in your actual values

# Flask configuration
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///app.db

# Telegram Bot configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_bot_username

# AWS S3 configuration (required for image uploads)
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
S3_BUCKET_NAME=your-bucket-name

# AWS CloudFront configuration
# Your CloudFront distribution domain (e.g., d1234567890.cloudfront.net)
CLOUDFRONT_DOMAIN=your-cloudfront-domain
# Set to False to fall back to direct S3 access
USE_CLOUDFRONT=True
# Optional: Only needed for CloudFront signed URLs with private content
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
# Optional: Path to your CloudFront private key file (e.g., /path/to/pk-XXXX.pem)
CLOUDFRONT_PRIVATE_KEY_PATH=instance/certs/private_key.pem

# AWS ElastiCache Redis configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=True
REDIS_DB=0

# Image processing configuration
# Maximum image size in bytes (10MB)
MAX_IMAGE_SIZE=10485760
# Lower image quality for smaller file size and reduced memory usage (85 recommended)
IMAGE_QUALITY=85
# Maximum image width in pixels (smaller = less memory usage)
MAX_IMAGE_WIDTH=1000
# ALLOWED_IMAGE_EXTENSIONS is defined in config.py (jpg,jpeg,png,gif,webp,heic,heif)
# THUMBNAIL_SIZE is defined in config.py (300,300)

# Backup configuration
# Set to False to disable automatic backups
AUTO_BACKUP_ENABLED=True
# Number of backup files to keep
BACKUP_COUNT=5

# Miscellaneous
# Default timezone for users (e.g., 'Asia/Shanghai', 'America/New_York')
TIMEZONE_DEFAULT=UTC
# Number of items to show per page in listings
ITEMS_PER_PAGE=10